<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#ffffff"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/strike_s100" />

        <TextView
            android:id="@+id/levelHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:text="Level"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLevelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:text="ADVENTURER"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:text="00:00"
            android:textSize="15dp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:src="@drawable/green_250"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:text="Correct"
            android:textSize="10dp"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/tvCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:text="5"
            android:textSize="10dp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:src="@drawable/red_100"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="29.5dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:text="Incorrect"
            android:textSize="10dp"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/tvInCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="29.5dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:text="5"
            android:textSize="10dp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:src="@drawable/crunkd"

            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="29.5dp"
            android:layout_toEndOf="@id/image"
            android:gravity="center"
            android:text="test name"
            android:textSize="10dp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>