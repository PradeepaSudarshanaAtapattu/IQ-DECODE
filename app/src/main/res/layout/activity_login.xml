<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#212E40"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:letterSpacing="0.02"
        android:text="Select Google Account"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/googel_1" />


    <Button
        android:id="@+id/google_sign"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonnew"
        android:letterSpacing="0.02"
        android:text="get started now"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:backgroundTint="#7995fd" />


</LinearLayout>